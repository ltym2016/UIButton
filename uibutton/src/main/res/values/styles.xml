<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 自定义Button 无需再写shape文件-->
    <declare-styleable name="UIButton">
        <!--shape 模式-->
        <attr name="ui_shapeMode" format="enum">
            <enum name="rectangle" value="0"/>
            <enum name="oval" value="1"/>
            <enum name="line" value="2"/>
            <enum name="ring" value="3"/>
        </attr>
        <!--填充颜色-->
        <attr name="ui_solidColor" format="color"/>
        <!--边框颜色-->
        <attr name="ui_strokeColor" format="color"/>
        <!--边框宽度-->
        <attr name="ui_strokeWidth" format="dimension"/>
        <!--圆角大小-->
        <attr name="ui_cornerRadius" format="dimension"/>
        <!--按压颜色-->
        <attr name="ui_pressedColor" format="color"/>
        <!--圆角位置-->
        <attr name="ui_cornerPosition">
            <flag name="topLeft" value="1"/>
            <flag name="topRight" value="2"/>
            <flag name="bottomRight" value="4"/>
            <flag name="bottomLeft" value="8"/>
        </attr>
        <!--是否开启动效-->
        <attr name="ui_activeEnable" format="boolean" />
        <!--渐变开始颜色-->
        <attr name="ui_startColor" format="color" />
        <!--渐变中间颜色-->
        <attr name="ui_centerColor" format="color" />
        <!--渐变结束颜色-->
        <attr name="ui_endColor" format="color" />
        <!--渐变方向-->
        <attr name="ui_orientation" format="enum">
            <enum name="TOP_BOTTOM" value="0"/>
            <enum name="LEFT_RIGHT" value="1"/>
            <enum name="TR_BL" value="2"/>
            <enum name="TL_BR" value="3"/>
        </attr>
    </declare-styleable>
</resources>
